{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always" // Run ESLint auto-fix on save, including Prettier fixes
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.singleQuote": true, // Prettier single quote setting
  "prettier.tabWidth": 2 // Prettier tab width setting
}
